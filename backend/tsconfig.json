{
  "compilerOptions": {
    "target": "es2020",                       
    "module": "commonjs",                     
    "lib": ["es2020"],                        
    "outDir": "./dist",                       
    "rootDir": "./src",                       
    "strict": true,                           
    "noImplicitAny": true,                    
    "esModuleInterop": true,                  
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true                 
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
}